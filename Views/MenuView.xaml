<UserControl x:Class="MemoryGardenWPF.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:m="clr-namespace:MemoryGardenWPF.Models"
             x:Name="Root">
  <Grid Background="#F0F4FF">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Border Grid.Row="0" Padding="24" CornerRadius="24" Background="#FFFFFFFF" BorderBrush="#E5E7EB" BorderThickness="1" Margin="24" >
      <StackPanel>
        <TextBlock Text="ðŸŒ± Memory Garden" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="A cozy memory match for little players" Foreground="#6B7280" HorizontalAlignment="Center"/>

        <Grid Margin="24,16,24,8">
          <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
          </Grid.ColumnDefinitions>

          <!-- Options -->
          <StackPanel Grid.Column="0" Margin="0,0,12,0">
            <TextBlock Text="Options" FontWeight="SemiBold"/>
            <CheckBox Content="Sound Effects (SFX)" IsChecked="{Binding SfxOn}" Margin="0,8,0,0"/>
            <TextBlock Text="How to Play" FontWeight="SemiBold" Margin="0,16,0,4"/>
            <TextBlock Text="1) Press Start Game. 2) Watch the 3-2-1 preview. 3) Find all pairs!" TextWrapping="Wrap"/>
          </StackPanel>

          <!-- Play Settings -->
          <StackPanel Grid.Column="1" Margin="12,0,0,0">
            <TextBlock Text="Play Settings" FontWeight="SemiBold"/>

            <TextBlock Text="Theme" Margin="0,8,0,4"/>
            <StackPanel Orientation="Horizontal">
              <RadioButton Content="Animals" Margin="0,0,8,0"
                           IsChecked="{Binding SelectedTheme, Converter={StaticResource EnumEq}, ConverterParameter={x:Static m:ThemeKey.Animals}}"/>
              <RadioButton Content="Fruits" Margin="0,0,8,0"
                           IsChecked="{Binding SelectedTheme, Converter={StaticResource EnumEq}, ConverterParameter={x:Static m:ThemeKey.Fruits}}"/>
              <RadioButton Content="Shapes"
                           IsChecked="{Binding SelectedTheme, Converter={StaticResource EnumEq}, ConverterParameter={x:Static m:ThemeKey.Shapes}}"/>
            </StackPanel>

            <TextBlock Text="Board Size" Margin="0,12,0,4"/>
            <StackPanel Orientation="Horizontal">
              <RadioButton Content="Tiny" Margin="0,0,8,0"
                           IsChecked="{Binding SelectedSize, Converter={StaticResource EnumEq}, ConverterParameter={x:Static m:BoardSize.Tiny}}"/>
              <RadioButton Content="Easy" Margin="0,0,8,0"
                           IsChecked="{Binding SelectedSize, Converter={StaticResource EnumEq}, ConverterParameter={x:Static m:BoardSize.Easy}}"/>
              <RadioButton Content="Medium"
                           IsChecked="{Binding SelectedSize, Converter={StaticResource EnumEq}, ConverterParameter={x:Static m:BoardSize.Medium}}"/>
            </StackPanel>
          </StackPanel>
        </Grid>

        <Button Content="Start Game" Command="{Binding StartGameCommand}" Height="44" Width="200" HorizontalAlignment="Center"/>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
