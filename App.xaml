<Application x:Class="MemoryGardenWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MemoryGardenWPF.ViewModels"
             xmlns:views="clr-namespace:MemoryGardenWPF.Views"
             xmlns:conv="clr-namespace:MemoryGardenWPF.Converters"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <BooleanToVisibilityConverter x:Key="BoolToVis"/>
      <conv:EnumEqualsConverter x:Key="EnumEq"/>

      <!-- View â†” ViewModel mapping -->
      <DataTemplate DataType="{x:Type vm:MenuViewModel}">
        <views:MenuView />
      </DataTemplate>
      <DataTemplate DataType="{x:Type vm:GameViewModel}">
        <views:GameView />
      </DataTemplate>
    </ResourceDictionary>
  </Application.Resources>
</Application>
